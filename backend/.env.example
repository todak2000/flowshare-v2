# Google Cloud Project
GCP_PROJECT_ID=
GCP_REGION=europe-west1

# Firebase
FIREBASE_PROJECT_ID=


# Pub/Sub Topics
PUBSUB_PRODUCTION_ENTRY_TOPIC=production-entry-created
PUBSUB_ENTRY_FLAGGED_TOPIC=entry-flagged
PUBSUB_RECONCILIATION_TRIGGER_TOPIC=reconciliation-triggered
PUBSUB_RECONCILIATION_COMPLETE_TOPIC=reconciliation-complete

# BigQuery
BQ_DATASET=flowshare_analytics
BQ_PRODUCTION_TABLE=production_data
BQ_RECONCILIATION_TABLE=reconciliation_results

# Vertex AI
VERTEX_AI_LOCATION=europe-west1
VERTEX_AI_ANOMALY_ENDPOINT=projects/flowshare-v2/locations/europe-west1/endpoints/YOUR_ENDPOINT_ID
VERTEX_AI_FORECAST_ENDPOINT=projects/flowshare-v2/locations/europe-west1/endpoints/YOUR_ENDPOINT_ID

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Agents
AUDITOR_AGENT_URL=http://localhost:8001
ACCOUNTANT_AGENT_URL=http://localhost:8002
COMMUNICATOR_AGENT_URL=http://localhost:8003

# Email (SendGrid or similar)
ZEPTO_TOKEN=
ZEPTO_FROM_EMAIL=

LOGO_URL=

# Frontend URL (used in email templates)
APP_URL=http://localhost:3000

# Gemini AI
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_FLASH_MODEL=gemini-2.5-flash

# ================================
# SECURITY SETTINGS (CRITICAL)
# ================================

# Swagger/API Documentation Protection
# REQUIRED in production - protects /docs and /redoc endpoints
# Set strong, unique credentials before deploying
SWAGGER_USERNAME=
SWAGGER_PASSWORD=  # REQUIRED: Set a strong password (min 16 chars, mixed case, numbers, symbols)

# Demo/Admin Endpoints Password
# REQUIRED for demo endpoints - used in development/staging only
# Demo endpoints are automatically disabled when ENVIRONMENT=production
DEMO_PASSWORD=  # REQUIRED if using demo endpoints

# Rate Limiting
# Maximum requests per minute per IP address
# Adjust based on your expected traffic
RATE_LIMIT_PER_MINUTE=60

# Environment
ENVIRONMENT=development  # Options: development, staging, production
DEBUG=true  # Set to false in production

# ================================
# PRODUCTION SECURITY CHECKLIST
# ================================
# Before deploying to production, ensure:
# ✓ ENVIRONMENT=production
# ✓ DEBUG=false
# ✓ SWAGGER_PASSWORD is set to a strong, unique password
# ✓ CORS_ORIGINS only includes your production domains
# ✓ All Firebase credentials are from production service account
# ✓ GEMINI_API_KEY has appropriate quota/billing
# ✓ Rate limiting configured for your traffic patterns
# ✓ All secrets stored in Google Secret Manager (not in .env)
# ✓ Firestore security rules deployed and tested
# ✓ Audit logging enabled and monitored
