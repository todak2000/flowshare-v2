# FlowShare V2 Test Environment Variables
# Copy this to .env and fill in your values

# ============================================
# Firebase Authentication (REQUIRED)
# ============================================
# Get from: Firebase Console → Settings → Web API Key
FIREBASE_API_KEY=

# Test user credentials
TEST_USER_EMAIL=
TEST_USER_PASSWORD=

# ============================================
# GCP Configuration
# ============================================
GCP_PROJECT_ID=flowshare-v2-project

# ============================================
# Integration Tests (Emulator Mode)
# ============================================
USE_EMULATOR=true
FIRESTORE_EMULATOR_HOST=localhost:8080
PUBSUB_EMULATOR_HOST=localhost:8085

# ============================================
# Generated Tokens (Auto-filled by auth_helper)
# ============================================
TEST_TOKEN=
TENANT_ID=

# ============================================
# Load Tests
# ============================================
BASE_URL=http://localhost:8000
# Or for staging/production:
# BASE_URL=https://flowshare-backend-api-226906955613.europe-west1.run.app

# ============================================
# Optional: For Live Environment Tests
# ============================================
# If testing against live environment (not emulator):
# USE_EMULATOR=false
# Remove or comment out EMULATOR_HOST variables above
